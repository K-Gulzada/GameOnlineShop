@model GameOnlineShop.ViewModels.RegisterViewModel

<style>
    body {
        background: url("/img/cs_2.jpg") no-repeat bottom center;
        background-size: 100%;
        height: 950px;
    }

    .registerDivWrapper {
        display: flex;
        color: white;
        margin: 250px 150px 0 0;
        flex-direction: column;
        align-items: center;
        width: 600px;
    }

    .width_300 {
        width: 300px;
    }

    .margin_10_0 {
        margin: 10px 0;
    }
</style>

<div class="registerDivWrapper">
    <h2>Регистрация нового пользователя</h2>
    <form method="post" asp-controller="Account" asp-action="Register">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="margin_10_0">
            <label class="width_300" asp-for="Email"></label><br />
            <input class="width_300" asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="margin_10_0">
            <label class="width_300" asp-for="Username"></label><br />
            <input class="width_300" asp-for="Username" />
            <span asp-validation-for="Username"></span>
        </div>
        <div class="margin_10_0">
            <label class="width_300" asp-for="Password"></label><br />
            <input class="width_300" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="margin_10_0">
            <label class="width_300" asp-for="PasswordConfirm"></label><br />
            <input class="width_300" asp-for="PasswordConfirm" />
            <span asp-validation-for="PasswordConfirm"></span>
        </div>
        <div class="margin_10_0">
            <input type="submit" value="Регистрация" />
        </div>
    </form>
</div>